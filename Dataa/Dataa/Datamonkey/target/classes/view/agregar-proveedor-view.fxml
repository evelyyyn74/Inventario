<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="328.0" prefWidth="532.0" spacing="15" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mx.edu.utez.datamonkey.controller.AgregarProveedorController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
   <children>
   
       <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Proveedor">
         <font>
            <Font name="Arial" size="17.0" />
         </font>
      </Label>
   
       <GridPane hgap="10" vgap="10">
           <columnConstraints>
               <ColumnConstraints halignment="RIGHT" minWidth="100" />
               <ColumnConstraints minWidth="250" />
           </columnConstraints>
   
           <children>
               <Label prefHeight="21.0" prefWidth="100.0" text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
               <TextField fx:id="txtNombre" GridPane.columnIndex="1" GridPane.rowIndex="0" />
   
               <Label prefHeight="21.0" prefWidth="106.0" text="Empresa:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
               <TextField fx:id="txtEmpresa" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   
               <Label prefHeight="21.0" prefWidth="105.0" text="Teléfono:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
               <TextField fx:id="txtTelefono" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   
               <Label prefHeight="21.0" prefWidth="104.0" text="Correo:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
               <TextField fx:id="txtCorreo" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   
               <Label prefHeight="21.0" prefWidth="106.0" text="Dirección:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
               <TextField fx:id="txtDireccion" prefHeight="31.0" prefWidth="385.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
           </children>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
       </GridPane>
   
       <HBox alignment="BOTTOM_RIGHT" spacing="20">
      <children>
      
              <Button onAction="#cerrarVentana" prefHeight="34.0" prefWidth="95.0" style="-fx-background-color: #696E6F; -fx-text-fill: white;" text="Cancelar">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Button>
              <Button onAction="#guardar" prefHeight="34.0" prefWidth="95.0" style="-fx-background-color: #2768AB; -fx-text-fill: white;" text="Guardar">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Button>
      </children>
       </HBox>
   </children>

</VBox>
